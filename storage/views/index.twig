                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-indigo-600 hover:text-white">Türkçe</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>

<header class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white pt-32 pb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-5xl md:text-5xl font-extrabold mb-4">{{ frameworkName }}: The Future of PHP Development</h1>
        <p class="text-xl md:text-2xl mb-8">{{ description }}</p>
        <div class="flex justify-center space-x-4">
            <a href="{{ url('/docs#getting-started') }}" class="bg-white text-indigo-600 font-medium px-8 py-3 rounded-md shadow-lg hover:bg-gray-100 transition-colors">
                Get Started
            </a>
            <a href="#demo" class="border-2 border-white text-white font-medium px-8 py-3 rounded-md hover:bg-white hover:text-indigo-600 transition-colors">
                Live Demo
            </a>
        </div>
    </div>
</header>

<section id="features" class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">Powerful Features for Modern Development</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for feature in features %}
                <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
                    <i class="fas {{ feature.icon }} text-3xl text-indigo-600 mb-4"></i>
                    <h3 class="text-xl font-semibold mb-2">{{ feature.title }}</h3>
                    <p class="text-gray-600">{{ feature.description }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<section id="performance" class="bg-gray-100 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">Unmatched Performance</h2>
        <div class="bg-white p-6 rounded-lg shadow-lg" style="max-width: 600px; margin: 0 auto;">
            <canvas id="performanceChart"></canvas>
        </div>
        <p class="text-center mt-8 text-gray-600">*Based on benchmark tests processing 1000 requests with a "Hello World" response</p>
    </div>
</section>

<section id="code-example" class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">Elegant and Powerful API</h2>
        <div class="bg-gray-900 rounded-lg shadow-lg overflow-hidden">
            <div class="flex items-center bg-gray-800 px-4 py-2 border-b border-gray-700">
                <div class="flex space-x-2">
                    <div class="w-3 h-3 rounded-full bg-red-500"></div>
                    <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                    <div class="w-3 h-3 rounded-full bg-green-500"></div>
                </div>
                <span class="ml-4 text-gray-400 text-sm">TaskController.php</span>
            </div>
            <div class="flex">
                <div class="py-4 px-2 text-right bg-gray-800 text-gray-500 select-none" aria-hidden="true" style="min-width: 2.5rem;">
                    <div>1</div>
                    <div>2</div>
                    <div>3</div>
                    <div>4</div>
                    <div>5</div>
                    <div>6</div>
                    <div>7</div>
                    <div>8</div>
                    <div>9</div>
                    <div>10</div>
                    <div>11</div>
                    <div>12</div>
                    <div>13</div>
                    <div>14</div>
                    <div>15</div>
                    <div>16</div>
                    <div>17</div>
                    <div>18</div>
                    <div>19</div>
                    <div>20</div>
                    <div>21</div>
                    <div>22</div>
                </div>
                <pre class="language-php flex-grow p-4 text-gray-300 overflow-x-auto" style="background-color: #1e1e2f;">
    <code><span style="color: #f76d47;">use</span> Yabasi\Http\Controllers\ApiController;
    <span style="color: #f76d47;">use</span> Yabasi\Http\Request;
    <span style="color: #f76d47;">use</span> Yabasi\Cache\CacheManager;

    <span style="color: #82aaff;">class</span> TaskController <span style="color: #f76d47;">extends</span> ApiController {
        <span style="color: #82aaff;">public function</span> index(Request <span style="color: #c3e88d;">$request</span>, CacheManager <span style="color: #c3e88d;">$cache</span>) {
            <span style="color: #f76d47;">return</span> <span style="color: #c3e88d;">$cache</span>->remember(<span style="color: #c792ea;">'tasks.all'</span>, <span style="color: #ffcb6b;">3600</span>, <span style="color: #82aaff;">function</span>() {
                <span style="color: #f76d47;">return</span> <span style="color: #c3e88d;">$this</span>->respondWithData(Task::all());
            });
        }

        <span style="color: #82aaff;">public function</span> store(Request <span style="color: #c3e88d;">$request</span>) {
            <span style="color: #c3e88d;">$validated</span> = <span style="color: #c3e88d;">$request</span>->validate([
                <span style="color: #c792ea;">'title'</span> => <span style="color: #c792ea;">'required|string|max:255'</span>,
                <span style="color: #c792ea;">'description'</span> => <span style="color: #c792ea;">'nullable|string'</span>,
                <span style="color: #c792ea;">'status'</span> => <span style="color: #c792ea;">'required|in:pending,in_progress,completed'</span>
            ]);

            <span style="color: #c3e88d;">$task</span> = Task::create(<span style="color: #c3e88d;">$validated</span>);
            <span style="color: #f76d47;">return</span> <span style="color: #c3e88d;">$this</span>->respondWithData(<span style="color: #c3e88d;">$task</span>, <span style="color: #ffcb6b;">201</span>);
        }
    }</code></pre>
            </div>
        </div>
    </div>
</section>

<section id="ecosystem" class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">Comprehensive Ecosystem</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for component in ecosystem %}
                <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
                    <i class="fas {{ component.icon }} text-3xl text-indigo-600 mb-4"></i>
                    <h3 class="text-xl font-semibold mb-2">{{ component.title }}</h3>
                    <p class="text-gray-600">{{ component.description }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<section id="docs" class="bg-gray-100 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-8">Comprehensive Documentation</h2>
        <p class="text-xl text-gray-600 mb-12">Everything you need to know about Yabasi, from getting started to advanced topics.</p>
        <a href="/docs" class="bg-indigo-600 text-white font-medium px-8 py-3 rounded-md hover:bg-indigo-700 transition-colors">
            Explore the Docs
        </a>
    </div>
</section>

<section id="community" class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-12">Join Our Thriving Community</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="bg-white p-6 rounded-lg shadow-md">
                <i class="fas fa-star text-4xl text-yellow-400 mb-4"></i>
                <h3 class="text-2xl font-bold mb-2">10,000+</h3>
                <p class="text-gray-600">GitHub Stars</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
                <i class="fas fa-users text-4xl text-blue-500 mb-4"></i>
                <h3 class="text-2xl font-bold mb-2">5,000+</h3>
                <p class="text-gray-600">Community Members</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
                <i class="fas fa-code-branch text-4xl text-green-500 mb-4"></i>
                <h3 class="text-2xl font-bold mb-2">1,000+</h3>
                <p class="text-gray-600">Contributors</p>
            </div>
        </div>
        <div class="mt-12">
            <a href="https://github.com/yabasi/yabasi" target="_blank" class="bg-gray-800 text-white font-medium px-8 py-3 rounded-md hover:bg-gray-700 transition-colors">
                <i class="fab fa-github mr-2"></i> Contribute on GitHub
            </a>
        </div>
    </div>
</section>

<footer class="bg-gray-900 text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <div>
                <h3 class="text-lg font-semibold mb-4">Yabasi</h3>
                <p class="text-gray-400">A powerful, flexible, and modern PHP framework designed for rapid application development.</p>
            </div>
            <div>
                <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
                <ul class="space-y-2">
                    <li><a href="#features" class="text-gray-400 hover:text-white">Features</a></li>
                    <li><a href="#ecosystem" class="text-gray-400 hover:text-white">Ecosystem</a></li>
                    <li><a href="#docs" class="text-gray-400 hover:text-white">Documentation</a></li>
